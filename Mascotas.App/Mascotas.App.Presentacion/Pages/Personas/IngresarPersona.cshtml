@page
@model Mascotas.App.Presentacion.Pages.IngresarPersonaModel
@{
}
<h1>Ingresar Persona </h1>
<form method="post">
    <div class="form-group">
        <label asp-for="personas.Nombre"></label>
        <input id="nombre" type="text" asp-for="personas.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="personas.Apellidos"></label>
        <input id="Apell" type="text" asp-for="personas.Apellidos" class="form-control" />
    </div>
    <div class="form-group">
       <button type="submit" class="btn btn-outline-danger">Ingresar Datos</button>
       <button id="btnCance" onclick="LimpiarFormulario();" type="submit" class="btn btn-outline-danger">Cancelar</button>
       <a asp-page="./Personas" class="btn btn-outline-success">Volver</a>
       </div>     
    </form>